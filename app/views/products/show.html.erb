<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @product.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_of_measurement) %>:</strong></dt>
  <dd><%= option_for_unidade_find(@product.unit_of_measurement) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @product.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @product.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:damage) %>:</strong></dt>
  <dd><%= avaria_boolean(@product.damage) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:balance_id) %>:</strong></dt>
  <dd><%= @product.balance.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_kind_id) %>:</strong></dt>
  <dd><%= @product.product_kind.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @product.user.name %></dd>
</dl>

<% if current_user.status == 'Ativo' %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_product_path,
              :class => 'btn btn-primary' %>
<% end %>  
<% if can? :edit, Product %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_product_path(@product), :class => 'btn btn-default' %>
<% end %> 
<% if can? :destroy, Product %>               
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                product_path(@product),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-default' %>
<% end %>    
<%= link_to t('.back', :default => t("helpers.links.back")),
              products_path, :class => 'btn btn-default'  %> 

<br>        
